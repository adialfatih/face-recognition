<% layout('layout') %>
    <h2>Absensi</h2>
    <div class="panel">
        <label for="type">Pilih Tipe/Shift:</label>
        <select id="type">
            <option value="GS">Absensi GS</option>
            <option value="Shift Pagi">Shift Pagi</option>
            <option value="Shift Siang">Shift Siang</option>
            <option value="Shift Malam">Shift Malam</option>
        </select>
        <button id="btnGo">Mulai Absensi</button>
    </div>
    <p class="muted">Setelah klik, kamera akan tampil penuh dan absen otomatis saat wajah dikenali.</p>
    <script src="/public/js/absensi-start.js" defer></script>